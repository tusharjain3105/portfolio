{
    "compilerOptions": {
        "alwaysStrict": false,
        "baseUrl": ".",
        "module": "commonjs",
        "watch": true,
        "sourceMap": true,
        "outDir": "target",
        "target": "ES2022",
        "jsx": "react-jsx",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitUseStrict": true,
        "strict": false
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}